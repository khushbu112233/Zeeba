<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:id="@+id/llMain"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <TextView
            android:id="@+id/tvCategoryName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:text="Education"
            android:textColor="@color/white"
            android:textSize="@dimen/med_text_size" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="15dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="15dp"
            android:orientation="horizontal"
            android:weightSum="3">


            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1.3"
                android:orientation="vertical">


                <TextView
                    android:id="@+id/tvInviteFromFriendName"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:background="@drawable/round_top_background_white"
                    android:gravity="center"
                    android:text="Test A"
                    android:textColor="@color/orange_dark"
                    android:textSize="@dimen/med_text_size" />


                <TextView
                    android:id="@+id/tvInviteFromFriendScore"
                    android:layout_width="match_parent"
                    android:layout_height="28dp"
                    android:background="@drawable/round_bottom_background_orange"
                    android:gravity="center"
                    android:text="500"
                    android:textColor="@color/white"
                    android:textSize="@dimen/med_text_size" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.4">

                <TextView
                    android:id="@+id/tvVersus"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="v/s"
                    android:textColor="@color/white"
                    android:textSize="@dimen/med_text_size" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1.3"
                android:orientation="vertical">


                <TextView
                    android:id="@+id/tvInviteToFriendName"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:background="@drawable/round_top_background_white"
                    android:gravity="center"
                    android:text="Test B"
                    android:textColor="@color/orange_dark"
                    android:textSize="@dimen/med_text_size" />


                <TextView
                    android:id="@+id/tvInviteToFriendScore"
                    android:layout_width="match_parent"
                    android:layout_height="28dp"
                    android:background="@drawable/round_bottom_background_orange"
                    android:gravity="center"
                    android:text="500"
                    android:textColor="@color/white"
                    android:textSize="@dimen/med_text_size" />


            </LinearLayout>


        </LinearLayout>

    </LinearLayout>
</layout>