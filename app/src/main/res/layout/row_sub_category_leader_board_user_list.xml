<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:id="@+id/llMain"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:padding="7dp">

        <RelativeLayout
            android:id="@+id/card_view"
            android:layout_width="155dp"
            android:layout_height="155dp"
            android:layout_gravity="center"
            android:background="@drawable/round_background_leaderboard_white"
            >


            <TextView
                android:id="@+id/tvNumberofLeader"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@mipmap/user_leader_top_corner_img_new"
                android:gravity="center_vertical|center_horizontal"
                android:paddingRight="5dp"
                android:text="12"
                android:paddingBottom="3dp"
                android:textColor="@color/white"
                android:textSize="12sp" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center_horizontal"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/imgUseravatarLeaderboard"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="5dp"
                    android:src="@mipmap/user_leader_avtar_img_new" />

                <TextView
                    android:id="@+id/tvUserNameLeaderboard"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="7dp"
                    android:paddingLeft="3dp"
                    android:paddingRight="3dp"
                    android:gravity="center_horizontal"
                    android:text="User"
                    android:maxLines="2"
                    android:textColor="@color/orange_dark"
                    android:textSize="@dimen/small_text_size" />


            </LinearLayout>


            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:gravity="bottom">

                <ProgressBar
                    android:id="@+id/progressBar1"
                    style="@style/SmallProgressBar"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:indeterminate="false"
                    android:progress="0"

                    android:progressDrawable="@drawable/custom_progress" />

                <TextView
                    android:id="@+id/myTextProgress"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:textColor="@color/white"
                    android:textSize="@dimen/small_text_size"
                    android:layout_alignBottom="@id/progressBar1"
                    android:layout_alignLeft="@id/progressBar1"
                    android:layout_alignRight="@id/progressBar1"
                    android:layout_alignTop="@id/progressBar1"
                    android:background="@android:color/transparent" />

            </RelativeLayout>


            <LinearLayout
                android:id="@+id/lnpointmain"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:orientation="horizontal"
                android:visibility="gone"
                android:weightSum="1">

                <TextView
                    android:id="@+id/tvPointresultwithfillupportion"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_gravity="bottom"
                    android:layout_weight="1"
                    android:background="@color/gray_dark"
                    android:gravity="center"
                    android:padding="8dp"
                    android:text="800"
                    android:textColor="@color/white"
                    android:textSize="@dimen/small_text_size"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/tvPointresultwithcount"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_gravity="bottom"
                    android:layout_weight="1"
                    android:background="@color/gray_dark"
                    android:gravity="center"
                    android:padding="8dp"
                    android:text="800"
                    android:textColor="@color/white"
                    android:textSize="@dimen/small_text_size"
                    android:visibility="gone" />

            </LinearLayout>

        </RelativeLayout >
    </LinearLayout>
</layout>