<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">


    <LinearLayout
        android:id="@+id/rel1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@mipmap/splash_bg"
        android:orientation="vertical">


        <ImageView
            android:id="@+id/imgTitleofapp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal|top"
            android:layout_marginLeft="110dp"
            android:layout_marginRight="110dp"
            android:src="@mipmap/nav_logo"></ImageView>


        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:id="@+id/activity_facebook_login"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="15dp"
                android:orientation="vertical"
                tools:context="com.zeeba.Activity.FacebookLoginActivity">


                <ImageView
                    android:layout_width="140dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal|top"
                    android:src="@mipmap/vector_user_fb"></ImageView>

                <TextView
                    android:id="@+id/tv_title_with_Facebook"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:padding="5dp"
                    android:text="@string/add_facebook_Friend_title"
                    android:textColor="@color/white"
                    android:textSize="@dimen/large_text_size" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="25dp"
                    android:gravity="center">

                    <Button
                        android:id="@+id/btnFb"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@mipmap/facebook_connect_btn"
                        android:gravity="center_horizontal" />

                </LinearLayout>

                <TextView
                    android:id="@+id/tvSkip"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="25dp"
                    android:gravity="center_horizontal"
                    android:text="Skip"
                    android:textAllCaps="true"
                    android:textColor="@color/white"
                    android:textSize="@dimen/med_text_size" />
            </LinearLayout>
        </ScrollView>
    </LinearLayout>

</layout>